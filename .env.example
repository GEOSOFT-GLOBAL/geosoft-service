# Server Configuration
NODE_ENV=DEV
PORT=5000

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRY=30d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175

# Database Configuration
MONGO_URI=mongodb://localhost:27017/geo_soft
MONGO_PROD_URI=your_production_mongodb_uri

# Security
BCRYPT_ROUND=8
SALT_ROUNDS=10

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
REDIRECT_URI=http://localhost:5173/auth/google/callback

# Browserless (for PDF generation)
BROWSERLESS_TOKEN=your_browserless_token

# Cloudinary (for file uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Service Configuration (for password reset)
# For Gmail, use your Gmail address and an App Password (not your regular password)
# Generate App Password: https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM=your_email@gmail.com

# Frontend URL (for constructing password reset links)
# Update this to match your frontend application URL
FRONTEND_URL=http://localhost:5173

# Gemini API Keys (one per application)
GEMINI_API_KEY=your_default_gemini_key
DOCXIQ_GEMINI_API_KEY=your_docxiq_gemini_key
TIMETABLELY_GEMINI_API_KEY=your_timetablely_gemini_key
LINKSHYFT_GEMINI_API_KEY=your_linkshyft_gemini_key
